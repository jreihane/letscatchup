package com.letscatchup.user.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.letscatchup.core.db.LcuCrudRepository;
import com.letscatchup.user.domain.entity.UserEntity;

@Service
public class UserService {

	private LcuCrudRepository<BaseEntity, Long> lcuCrudRepository;
	
	@Autowired
    public UserService(LcuCrudRepository<UserEntity, Long> lcuCrudRepository) {
        this.lcuCrudRepository = lcuCrudRepository;
}
	
	public UserEntity addUser(UserEntity userEntity) {
		
		return lcuCrudRepository.save(userEntity);
		
	}
}
