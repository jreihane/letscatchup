package com.letscatchup.group.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.letscatchup.event.domain.entity.EventEntity;
import com.letscatchup.event.domain.repository.EventCrudRepository;
import com.letscatchup.group.domain.entity.GroupEntity;
import com.letscatchup.group.domain.repository.GroupCrudRepository;

@Service
public class GroupService {

	@Autowired
	private GroupCrudRepository groupCrudRepository;
	
	
	public GroupEntity addEvent(GroupEntity eventEntity) {
		
		return groupCrudRepository.save(eventEntity);
		
	}
	
	public GroupEntity updateEvent(GroupEntity eventEntity) {
		
		return groupCrudRepository.save(eventEntity);
		
	}
	
	public void deleteEvent(Long eventId) {
		
		groupCrudRepository.delete(eventId);
		
	}

	public GroupEntity loadEvent(Long eventId) {
		
		return groupCrudRepository.findOne(eventId);
		
	}
}
